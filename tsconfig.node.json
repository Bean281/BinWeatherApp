{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "allowImportingTsExtensions": true,
    "noEmit": true, // Added this to fix the first error
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts", "src/vite-env.d.ts"] // Include the custom type declaration file
}