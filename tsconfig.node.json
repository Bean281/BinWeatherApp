{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "Node16", // Update this to Node16
    "moduleResolution": "node16", // Ensure this is set to node16
    "lib": ["ES2020"],
    "allowImportingTsExtensions": true,
    "noEmit": true, // Ensure this is set to true
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts", "src/vite-env.d.ts"] // Include the custom type declaration file
}